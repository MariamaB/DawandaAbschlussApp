<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv_you"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="27dp"
        app:cardBackgroundColor="@color/borderless_button_divider"
        android:elevation="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sender_photo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sender_name"
                android:layout_toRightOf="@+id/sender_photo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:text="Miriam Lischke"
                android:textColor="@color/actionbutton_disabled_background_color"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/conversation_text1"
                android:layout_toRightOf="@+id/sender_photo"
                android:layout_below="@+id/sender_name"
                android:text="25 years old"
                android:textColor="#FFFAF0"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>